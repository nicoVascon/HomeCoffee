<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AddRoomFragment">

    <TextView
        android:id="@+id/textViewSelectRoomType"
        style="@style/Sub_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:height="30dp"
        android:autoText="true"
        android:elegantTextHeight="true"
        android:fontFamily="@font/days_one"
        android:text="Select a room type"
        android:textColor="#6A000000"

        app:autoSizeMinTextSize="20dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRoomName" />

    <EditText
        android:id="@+id/editTextRoomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:height="50dp"
        android:autoText="true"
        android:elegantTextHeight="true"
        android:fontFamily="@font/days_one"
        android:hint="name"

        android:textColor="#6A000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInsertName" />

    <TextView
        android:id="@+id/textViewInsertName"
        style="@style/Sub_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:height="30dp"
        android:autoText="true"
        android:elegantTextHeight="true"
        android:fontFamily="@font/days_one"
        android:text="Insert a name"
        android:textColor="#81000000"
        android:textStyle="normal"
        app:autoSizeMinTextSize="20dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAddRoom" />

    <TextView
        android:id="@+id/textAddRoom"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:height="50dp"
        android:fontFamily="@font/days_one"
        android:text="Add a room"
        android:textAlignment="center"
        android:textColor="#8B000000"

        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/roomType_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/spinner_contDescription"
        android:minHeight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectRoomType"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonAddRoom_w_values"
        style="@style/Button.LightOrange"
        android:layout_width="88dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Add"
        android:textAlignment="center"
        android:theme="@style/Button.LightOrange"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomType_spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>